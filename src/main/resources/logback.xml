<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encnoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %date [%thread] [%-5level] %logger{40} - %message%n
            </pattern>
        </encnoder>
    </appender>

    <logger name="com.bryan" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>